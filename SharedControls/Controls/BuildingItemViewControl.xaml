<UserControl x:Class="Shared.Controls.BuildingItemViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shared.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border x:Name="dropZoneBorder"
        BorderBrush="Black"
        BorderThickness="0,0,0,2"
        Margin="50"
        Height="70"
        Width="400"
            Background="Honeydew">
            <StackPanel x:Name="spItemDropZone"
                Orientation="Horizontal"
                Background="Transparent">
                <!-- Здесь будут динамически добавляться слова -->
            </StackPanel>
        </Border>

        <UniformGrid x:Name="spItemSource"
                 Grid.Row="1"
                 Rows="1"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="50">
        </UniformGrid>
    </Grid>
</UserControl>
