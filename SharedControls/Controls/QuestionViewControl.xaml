<UserControl x:Class="Shared.Controls.QuestionViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shared.Controls"
             d:DataContext="{d:DesignInstance Type=local:QuestionViewControl}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <!-- Question Text -->
        <TextBlock Text="{Binding Question.Text}" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="16"
                   FontStyle="Italic"/>

        <StackPanel x:Name="spOptions"></StackPanel>
    </StackPanel>
</UserControl>